<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
    "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

  <definition name="defaultLayout" template="/WEB-INF/layout/default.jsp">
    <put-attribute name="title" value="Default layout"/>
  </definition>

  <definition name="indexPage" extends="defaultLayout">
    <put-attribute name="title" value="Start Page"/>
    <put-attribute name="content" value="/WEB-INF/view/index.jsp"/>
  </definition>

  <definition name="loginPage" extends="defaultLayout">
    <put-attribute name="title" value="Login Page"/>
    <put-attribute name="content" value="/WEB-INF/view/auth/loginPage.jsp"/>
  </definition>

  <definition name="targetSource" extends="defaultLayout">
    <put-attribute name="title" value="Target Page"/>
    <put-attribute name="content" value="/WEB-INF/view/userTargets/targetSource.jsp"/>
  </definition>

  <definition name="targetSourceNext" extends="defaultLayout">
    <put-attribute name="title" value="Next Target Page"/>
    <put-attribute name="content" value="/WEB-INF/view/userTargets/targetSourceNext.jsp"/>
  </definition>

</tiles-definitions>